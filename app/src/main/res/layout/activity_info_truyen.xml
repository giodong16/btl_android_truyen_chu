<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoTruyenActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10sp"
                    >
                    <ImageView
                        android:id="@+id/image_infoTruyen"
                        android:layout_width="100sp"
                        android:layout_height="150sp"
                        android:src="@drawable/baseline_image_not_supported_24"
                        android:layout_marginEnd="-5sp"
                     />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textName_infoTruyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="CÂY KHÔ GẶP XUÂN VỀ ABC ABC ABC ABACBABCABSC"

                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="75sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Tác giả: "
                            android:textSize="14sp"

                            />

                        <TextView
                            android:id="@+id/textAuthorName_infoTruyen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:fontFamily="serif"
                            android:text="Cầm Kì Thi Họa"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="75sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Số chương: "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textChap_infoTruyen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:fontFamily="serif"
                            android:text="1254 chương"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="75sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Trạng thái: "
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textStatus_infoTruyen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5sp"
                            android:fontFamily="serif"
                            android:text="Hoàn thành"
                            android:textColor="@color/bookmark_color"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal"

                >
                <Button
                    android:id="@+id/btnDocTruyen"
                    android:layout_width="wrap_content"
                    android:layout_height="45sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_button"
                    android:fontFamily="serif"
                    android:text="Đọc truyện"
                    android:textSize="10sp"
                    />
                <ImageButton
                    android:id="@+id/btnDownload"
                    android:layout_width="40sp"
                    android:layout_height="45sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/style_button"
                    android:src="@drawable/baseline_download_24"
                    android:tooltipText="Tải về" />

                <ImageButton
                    android:id="@+id/btnThemKe"
                    android:layout_width="40sp"
                    android:layout_height="45sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/style_button"
                    android:src="@drawable/baseline_bookmark_add_24"
                    android:tooltipText="Thêm vô kệ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/lavender"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingStart="15sp"
                    android:text="Thể loại"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linear_layout_theloai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp">

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/btnGioiThieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/lavender" />

                <TextView
                    android:id="@+id/text_title_gioithieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingStart="15sp"
                    android:text="Giới thiệu"
                    android:textAllCaps="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textGioiThieu_infoTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="serif"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/lavender"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="serif"
                    android:gravity="start"
                    android:padding="5sp"
                    android:paddingStart="15sp"
                    android:text="Cùng tác giả"
                    android:textAllCaps="true"
                    android:textSize="14sp"

                    />

                <TextView
                    android:id="@+id/textThemTruyenCungTacGia"
                    style="@style/styleThemTruyenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"

                    android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                    android:gravity="center"
                    android:text="Thêm" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <Adapter.ListTruyen_HorizontalScrollView
                    android:id="@+id/linear_layout_cungtacgia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp">

                </Adapter.ListTruyen_HorizontalScrollView>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
    <!-- <com.google.android.material.bottomsheet.BottomSheetDragHandleView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         >

     </com.google.android.material.bottomsheet.BottomSheetDragHandleView>-->

</LinearLayout>
