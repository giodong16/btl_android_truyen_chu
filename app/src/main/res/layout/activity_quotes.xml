<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_activity_quotes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuotesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/style_title_act"
        >
        <ImageButton
            android:id="@+id/btn_quit_quotes"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/baseline_chevron_left_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/style_quit_image_button"
            android:scaleType="fitXY"

            />
        <TextView
            android:id="@+id/textTitle_quotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Những câu nói hay"
            android:textSize="13sp"
            android:fontFamily="serif"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:paddingEnd="50dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/lavender"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_qoutes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabSelectedTextColor="@color/lavender"

        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_quotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        />

</LinearLayout>