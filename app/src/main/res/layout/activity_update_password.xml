<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_Password_Activity">
    <LinearLayout
        android:id="@+id/container_title_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/style_title_act"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageButton
            android:id="@+id/btn_quit_update_password_activity"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/baseline_chevron_left_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/style_quit_image_button"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/title_update"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:paddingEnd="50sp"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Cập nhật thông tin"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lavender"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/container_title_update"
        />
    <LinearLayout
        android:id="@+id/layout_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="45sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập:"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="@android:color/holo_red_dark"
            android:id="@+id/username_container_update_activity"
            app:hintEnabled="false"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_username_update_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên đăng nhập..."
                android:textColorHint="@color/grey_font"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:padding="10dp"
                android:singleLine="true"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại:"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="@android:color/holo_red_dark"

            app:counterEnabled="true"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            android:id="@+id/password_old_container_update_activity"
            app:passwordToggleTint="@color/grey_font"
            app:hintEnabled="false"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_old_password_update_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu hiện tại"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/grey_font"
                android:textColor="@color/black"


                android:fontFamily="serif"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="8"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới:"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:counterEnabled="true"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            android:id="@+id/password_new_container_update_activity"
            app:passwordToggleTint="@color/grey_font"
            app:hintEnabled="false"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_new_password_update_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu mới"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColorHint="@color/grey_font"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="8"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới:"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextTextColor="@android:color/holo_red_dark"
            app:counterEnabled="true"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            android:id="@+id/password_container1_update_activity"
            app:hintEnabled="false"
            app:passwordToggleTint="@color/grey_font"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="@color/white"
            android:layout_marginBottom="10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_new_password_1_update_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lai mật khẩu mới..."
                android:inputType="textPassword"
                android:textColorHint="@color/grey_font"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:padding="10dp"
                android:maxLength="8"
                android:maxLines="1"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnUpdate_password_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/style_button"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>