<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectChapActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:theme="@style/style_title_act"
        >
        <ImageButton
            android:id="@+id/btn_quit_select_chap"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/baseline_chevron_left_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/style_quit_image_button"
            android:scaleType="fitXY"

            />
        <TextView
            android:id="@+id/textTenTruyVan_select_chap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Truyện"
            android:textSize="13sp"
            android:fontFamily="serif"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingEnd="50sp"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/lavender"
        />
    <SearchView
        android:id="@+id/searchview_chuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Nhập số hoặc tên chương.."
        android:iconifiedByDefault="false"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        style="@style/search_view"
        android:layout_marginTop="10sp"
        />

    <ListView
        android:id="@+id/listview_chuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/main_gradient"
        android:dividerHeight="1sp"
        android:layout_margin="10sp"


        />
</LinearLayout>