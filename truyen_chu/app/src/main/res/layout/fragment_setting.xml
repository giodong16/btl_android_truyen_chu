<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".SettingFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="THÔNG TIN "
        android:fontFamily="serif"
        android:textSize="15sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lavender"
        android:layout_marginBottom="20dp"
        />

    <ImageView
        android:id="@+id/setting_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/open_book"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/style_avater_image"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/tentaikhoan_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Đình Tiếp"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:padding="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textUpdate_thongtin_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin cá nhân"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:padding="10sp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        android:drawableTint="@color/grey_font"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />
    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Chế độ ban đêm"
        android:textSize="16sp"
        android:padding="10sp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />

    <TextView
        android:id="@+id/textAbouUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:padding="10sp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        android:drawableTint="@color/grey_font"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lavender"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        />
    <TextView
        android:id="@+id/textĐangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:fontFamily="serif"
        android:textSize="16sp"
        android:padding="10sp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        android:drawableTint="@color/grey_font"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        />
</LinearLayout>