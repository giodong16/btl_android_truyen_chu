<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintlayout_success"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dialog_success"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >


        <TextView
            android:id="@+id/success_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Thành công"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
           app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/success_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Xin chúc mừng!"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@id/success_done"
            app:layout_constraintTop_toBottomOf="@id/success_title" />

        <Button
            android:id="@+id/success_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:backgroundTint="#02B5B3"
            android:text="Xong"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/success_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/image_success"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_dialog_success"
        app:layout_constraintTop_toTopOf="@+id/layout_dialog_success"
        />

</androidx.constraintlayout.widget.ConstraintLayout>